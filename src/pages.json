{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "开博生意通"
      }
    },
    {
      "path": "pages/work/index",
      "style": {
        "navigationBarTitleText": "工作台"
      }
    },
    {
      "path": "pages/add/index",
      "style": {
        "navigationBarTitleText": "开单界面"
      }
    },
    {
      "path": "pages/mine/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录页面",
        "navigationBarBackgroundColor": "#3c75f8"
      }
    }
  ],
  "subPackages": [
    {
      "root": "page-authority-chunk",
      "pages": [
        {
          "path": "sales/delivery/index",
          "style": {
            "navigationBarTitleText": "销售送货单"
          }
        },
        {
          "path": "work-list/index",
          "style": {
            "navigationBarTitleText": "工作台"
          }
        }
      ]
    },
    {
      "root": "page-chunk",
      "pages": [
        {
          "path": "notice-list/index",
          "style": {
            "navigationBarTitleText": "公告列表"
          }
        }
      ]
    }
  ],
  "tabBar": {
    "color": "#000",
    "selectedColor": "#2979ff",
    "backgroundColor": "",
    "position": "bottom",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/tabbar-icon/home.png",
        "selectedIconPath": "static/tabbar-icon/onHome.png"
      },
      {
        "pagePath": "pages/work/index",
        "text": "工作台",
        "iconPath": "static/tabbar-icon/log.png",
        "selectedIconPath": "static/tabbar-icon/onlog.png"
      },
      {
        "pagePath": "pages/add/index",
        "text": "开单",
        "iconPath": "static/tabbar-icon/add.png",
        "selectedIconPath": "static/tabbar-icon/onAdd.png"
      },
      {
        "pagePath": "pages/mine/index",
        "text": "我的",
        "iconPath": "static/tabbar-icon/my.png",
        "selectedIconPath": "static/tabbar-icon/onMy.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "开博生意通",
    "navigationBarBackgroundColor": "#0094ff",
    "backgroundColor": "#F8F8F8"
  },
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "h-tag": "./components/h-tag/h-tag.vue"
    }
  }
}
